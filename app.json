{
  "expo": {
    "name": "Todo App",
    "description": "Todo App Designed by Jidonu Segun",
    "slug": "TodoApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/segun.png",
    "splash": {
      "image": "./assets/segun.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
